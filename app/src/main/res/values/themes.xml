<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SitecTestLogin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/main_backgroung</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="TitleTextViewStyle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_bigest</item>
        <item name="android:fontFamily">@font/outfit_medium</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Filled" parent="">
        <item name="colorControlActivated">@color/black</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:gravity">start</item>
    </style>

    <!--IMAGE BUTTON APEARANCE - START -->
    <style name="ImageButtonsStyleDark">
        <item name="colorControlHighlight">@color/dark_button_ripple_color</item>
        <item name="android:elevation">@dimen/button_elevation_normal</item>
        <item name="background">@drawable/button_shape</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ImageButtonsStyleLight">
        <item name="colorControlHighlight">@color/light_button_ripple_color</item>
        <item name="android:elevation">@dimen/button_elevation_normal</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>
    <!--IMAGE BUTTON APEARANCE - END -->
    <!--BUTTON TEXT APEARANCE - START -->
    <style name="ButtonTextStyleLight">
        <item name="android:textSize">@dimen/text_size_medium_plus</item>
        <item name="android:fontFamily">@font/outfit_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">@dimen/button_elevation_normal</item>
    </style>

    <style name="ButtonTextStyleDark">
        <item name="android:textSize">@dimen/text_size_medium_plus</item>
        <item name="android:fontFamily">@font/outfit_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">@dimen/button_elevation_normal</item>
    </style>
    <!--TEXT VIEW BUTTON APEARANCE - END -->
</resources>